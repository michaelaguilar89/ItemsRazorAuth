@page

@model ItemsRazor.Pages.Products.EditModel
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto ">
            <h3 class="text-center text-success"> Update Product</h3>
            @if (@Model.ErrorMessage!=null)
            {
                <h3 class="text-danger text-center">
                    @Model.ErrorMessage
                </h3>
            }
            <form method="post">
                <input type="hidden"asp-for="product.Id" />
                <div class="form-group">
                    <label asp-for="product.Name" class="control-label"></label>
                    <input asp-for="product.Name" class="form-control" />
                    <span asp-validation-for="product.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="product.Description" class="control-label"></label>
                    <input asp-for="product.Description" class="form-control" />
                    <span asp-validation-for="product.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label">Actual Quantity</label>
                    <input asp-for="product.Quantity"  class="form-control" readonly />
                    <span asp-validation-for="product.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label">Update Quantity</label>
                    <input asp-for="@Model.UpdateQuantity" class="form-control" />
                    <span asp-validation-for="product.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="product.Price" class="control-label"></label>
                    <input asp-for="product.Price" class="form-control" />
                    <span asp-validation-for="product.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="product.UserName" class="control-label"></label>
                    <input asp-for="product.UserName" class="form-control" readonly />
                    <span asp-validation-for="product.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="product.CreationDate" class="control-label"></label>
                    <input asp-for="product.CreationDate" class="form-control" readonly />
                    <span asp-validation-for="product.CreationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="product.Comments" class="control-label"></label>
                    <input  asp-for="product.Comments" class="form-control" />
                    <span asp-validation-for="product.Comments" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary mx-3">Update</button>
                    <a asp-page="/Products/Index" class="btn btn-secondary">Go Index</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
